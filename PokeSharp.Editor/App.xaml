<Application x:Class="PokeSharp.Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PokeSharp.Editor"
             xmlns:Views="clr-namespace:PokeSharp.Editor.Views"
             xmlns:ViewModels="clr-namespace:PokeSharp.Editor.ViewModels"
             StartupUri="Views\MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModels:MainWindowViewModel}">
                <Views:MainWindow/>
            </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:PokemonViewModel}">
            <Views:PokemonControl Margin="0,0,0,0"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:TypeViewModel}">
            <Views:TypeControl/>
        </DataTemplate>
    </Application.Resources>
</Application>
